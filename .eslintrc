{
  "root": true,
  "extends": ["prettier", "plugin:prettier/recommended"],
  "plugins": ["@typescript-eslint", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "ignorePatterns": ["dist/", "node_modules/"],
  "overrides": [
    {
      "files": ["src/**/*.ts", "tests/**/*.ts"]
    }
  ]
}
